<h2><%= @user.name %></h2>
<%= link_to "Edit", edit_user_path %>
<h2>Height: <%= @user.height %></h2>
<h2>Weight: <%= @user.weight %></h2>

<% @biometrics.each do |biometric| %>
<div class="biometric">
  <h3><%= biometric.name %></h3>
  <p>Value: <%= biometric.value %> <%= biometric.measurement_type %></p>
<p>Created on: <%= biometric.created_at.strftime("%b %d. %Y") %> | Updated on: <%= biometric.updated_at %></p>
</div>
<%=  link_to "Delete!", user_path(@user), method: :delete, class: "delete" %>
<% end %>
